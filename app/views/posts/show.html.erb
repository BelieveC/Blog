<div id="post_content">
	<h1 class="title"> 
		<%= @post.title %>
	</h1>

	<p class="date">
		<%= time_ago_in_words(@post.created_at) %> Ago
	</p>
	<p class="body">
		<%= @post.body %>
	</p>
	<% if user_signed_in? %>
		<div class="buttons">
			<button class="button"><%=link_to "Edit", edit_post_path %></button>
			<buttton class="button"><%= link_to "Delete", @post, method: :delete,:data=>{confirm: "Are you sure?"} %></buttton>
		</div>
	<% end %>
	<div id="comments">
		<h2><%= pluralize @post.comments.count,"Comment" %></h2>
		<%= render @post.comments %>

		<h3>Add a Comment</h3>
		<%= render "comments/form" %>
	</div>
	
</div>